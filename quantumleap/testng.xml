<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="QuantumLeap Suite" parallel="tests" thread-count="4">

  <listeners>
    <listener class-name="com.quantumleap.core.TestListener"/>
  </listeners>

  <test name="UI Tests">
    <classes>
      <class name="com.quantumleap.tests.ui.LoginTests"/>
      <class name="com.quantumleap.tests.ui.PurchaseFlowTests"/>
    </classes>
  </test>

  <test name="API Tests">
    <classes>
      <class name="com.quantumleap.tests.api.ReqResCrudTests"/>
    </classes>
  </test>

  <test name="BDD - Add To Cart">
    <classes>
      <class name="com.quantumleap.tests.bdd.runners.CucumberTestRunner"/>
    </classes>
  </test>

</suite>
